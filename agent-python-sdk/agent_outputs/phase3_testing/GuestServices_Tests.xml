<?xml version="1.0" ?>
<AiEvaluationDefinition xmlns="http://soap.sforce.com/2006/04/metadata">
  <fullName>GuestServices_Tests</fullName>
  <label>Guestservices Tests</label>
  <agentVersion>Resort Manager Agent</agentVersion>
  <testCases>
    <name>TestCase_1_ReservationLookup</name>
    <inputs>
      <utterance>Find my reservation for John Smith</utterance>
      <contextVariables>
        <name>CustomerType</name>
        <value>VIP</value>
      </contextVariables>
      <contextVariables>
        <name>Channel</name>
        <value>Phone</value>
      </contextVariables>
    </inputs>
    <expectations>
      <type>topicSequence</type>
      <expectedTopic>GuestServices</expectedTopic>
    </expectations>
    <expectations>
      <type>actionSequence</type>
      <expectedAction>search_reservations</expectedAction>
    </expectations>
    <expectations>
      <type>stringMatch</type>
      <expectedString>reservation</expectedString>
    </expectations>
    <expectations>
      <type>qualityMetric</type>
      <qualityMetric>accuracy</qualityMetric>
    </expectations>
  </testCases>
  <testCases>
    <name>TestCase_2_ComplaintHandling</name>
    <inputs>
      <utterance>I have a complaint about the noise in my room</utterance>
      <contextVariables>
        <name>GuestStatus</name>
        <value>VIP</value>
      </contextVariables>
      <contextVariables>
        <name>RoomNumber</name>
        <value>303</value>
      </contextVariables>
    </inputs>
    <expectations>
      <type>topicSequence</type>
      <expectedTopic>GuestServices</expectedTopic>
    </expectations>
    <expectations>
      <type>actionSequence</type>
      <expectedAction>handle_complaints</expectedAction>
    </expectations>
    <expectations>
      <type>stringMatch</type>
      <expectedString>apologize</expectedString>
    </expectations>
    <expectations>
      <type>qualityMetric</type>
      <qualityMetric>empathy</qualityMetric>
    </expectations>
  </testCases>
</AiEvaluationDefinition>
