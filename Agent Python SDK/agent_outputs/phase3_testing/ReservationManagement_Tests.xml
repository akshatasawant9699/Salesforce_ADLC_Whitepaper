<?xml version="1.0" ?>
<AiEvaluationDefinition xmlns="http://soap.sforce.com/2006/04/metadata">
  <fullName>ReservationManagement_Tests</fullName>
  <label>Reservationmanagement Tests</label>
  <agentVersion>Coral CLoud AK Resort Manager</agentVersion>
  <testCases>
    <name>TestCase_1_ReservationLookup</name>
    <inputs>
      <utterance>Find my reservation for John Smith</utterance>
      <contextVariables>
        <name>CustomerType</name>
        <value>Returning</value>
      </contextVariables>
      <contextVariables>
        <name>Channel</name>
        <value>Phone</value>
      </contextVariables>
    </inputs>
    <expectations>
      <type>topicSequence</type>
      <expectedTopic>ReservationManagement</expectedTopic>
    </expectations>
    <expectations>
      <type>actionSequence</type>
      <expectedAction>SearchReservation</expectedAction>
    </expectations>
    <expectations>
      <type>stringMatch</type>
      <expectedString>reservation</expectedString>
    </expectations>
    <expectations>
      <type>qualityMetric</type>
      <qualityMetric>accuracy</qualityMetric>
    </expectations>
  </testCases>
  <testCases>
    <name>TestCase_2_ReservationModification</name>
    <inputs>
      <utterance>I need to change my check-in date to tomorrow</utterance>
      <conversationHistory>
        <role>user</role>
        <message>Find my reservation for John Smith</message>
        <index>0</index>
      </conversationHistory>
      <conversationHistory>
        <role>agent</role>
        <message>I found your reservation. Room 303, checking in November 20th.</message>
        <topic>ReservationManagement</topic>
        <index>1</index>
      </conversationHistory>
    </inputs>
    <expectations>
      <type>topicSequence</type>
      <expectedTopic>ReservationModification</expectedTopic>
    </expectations>
    <expectations>
      <type>actionSequence</type>
      <expectedAction>ModifyReservation</expectedAction>
    </expectations>
    <expectations>
      <type>stringMatch</type>
      <expectedString>check-in</expectedString>
    </expectations>
  </testCases>
</AiEvaluationDefinition>
